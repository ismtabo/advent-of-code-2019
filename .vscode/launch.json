  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "request": "launch",
      "type": "pwa-node",
      "program": "./src/cli/mod.ts",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-brk",
        "--allow-all",
      ],
      "args": [
        "run",
        "-d1",
        "-p2",
        // "--sample",
        // "--file=src/solutions/day10/sample_1.txt"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Run Deno current file",
      "request": "launch",
      "type": "pwa-node",
      "program": "${file}",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-brk",
        "--allow-all",
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Run Deno Tests",
      "request": "launch",
      "type": "pwa-node",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "test",
        "--inspect",
        "--allow-all",
      ],
      "port": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Debug Current Test File",
      "request": "launch",
      "type": "pwa-node",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "test",
        "${file}",
        "--inspect-brk",
        "--allow-all",
      ],
      "port": 9229,
      "outputCapture": "std"
    },
    {
      "name": "Debug Selected Test Case",
      "request": "launch",
      "type": "pwa-node",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "test",
        "${file}",
        "--inspect-brk",
        "--filter",
        "${selectedText}",
        "--allow-all",
      ],
      "port": 9229,
      "outputCapture": "std"
    }
  ]
}